# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/devforge
SYNC_DATABASE_URL=postgresql+psycopg://postgres:password@postgres:5432/devforge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=devforge

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=replace_me_with_very_long_secret
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=14
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# AI / LLM
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting
GITHUB_API_RATE_LIMIT=5000
RATE_LIMIT_PER_MINUTE=60

# Caching
CACHE_TTL_SECONDS=300
DB_CACHE_TTL_HOURS=24
REDIS_CACHE_PREFIX=devforge:cache:

# Celery
CELERY_TASK_TIMEOUT=3600
CELERY_MAX_RETRIES=3
CELERY_WORKER_CONCURRENCY=4

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Deployment
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET=devforge-portfolios
CLOUDFLARE_R2_ENDPOINT=

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true
